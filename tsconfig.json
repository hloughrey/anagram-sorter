{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@latitude55/lib": ["src/lib"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.*", "src/testing/**"]
}
